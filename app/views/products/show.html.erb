<% @page_title = "name" %>

<div class="container search-container" style="border: 2px">

  <!-- Product category -->
  <%= render(:partial => "product_category") %>

  <!-- Search form -->
  <%= render(:partial => "search_form") %>



  <div class="well well-item">
    <div class="col-md-4">
      <div class="thumbnail">
        <%= image_tag(@show_product.image, class: 'img-item', :alt=> 'mkjhuygtfdr') %>
      </div>

    </div>
    <div class="col-md-8 item-one">
        <h1><%= @show_product.name %></h1>
        <p><span>شهر:  <%= @show_product.city %></span></p>
        <p><span>قیمت روزانه: <%= @show_product.price %></span></p>
        <p><span>توضیحات: <%= @show_product.description %></span></p>
        <p><span>مشخصات امانتی دهنده: <%= @show_product.description %></span></p>
    </div>

  </div>


<!-- Items -->
<h3>امانتی های مرتبط</h3>
    <% @other_product.in_groups_of(3).each do |group| %>
      <div class="row">

          <% group.each do |item| %>
            <% if item %>
              <div class="col-md-4">
              <div class="thumbnail">
                <%= image_tag(item.image, class: 'img-thumb-item', :alt=> item.name) %>
                <div class="caption"  style="text-align: center">
                  <h3><%= item.name%></h3>
                  <p class="p-thumb"><%= item.description %></p>
                  <button type="button" class="btn btn-success">
                    <%= link_to("اطلاعات کامل", {:controller=>'products', :action=>'show', :id=>item.id}) %>
                  </button>
                </div>
              </div>
              </div>
            <% end %>
          <% end %>
        
      </div>
    <% end %>


</div>

